@model Lombiq.RssReader.ViewModels.RssSyncProfilePartContentTypeEditorViewModel

<fieldset>
    <ol>
        <li>
            @Html.LabelFor(m => m.RssSyncProfilePart.ContentType, T("Content Type"))
            @if (string.IsNullOrEmpty(Model.RssSyncProfilePart.ContentType))
            {
                @Html.DropDownList("ContentType", Model.AccessibleContentTypes)
            }
            else
            {
                @Html.DropDownList("ContentType", Model.AccessibleContentTypes, new { disabled = true })

            }
            @Html.Hint(T("A content item with this type will be created. Only types with attached RssSyncProfileItemPart can be selected. You have to select this first and you can't change it later."))
        </li>
    </ol>
</fieldset>