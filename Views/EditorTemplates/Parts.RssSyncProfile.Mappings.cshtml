@model Lombiq.RssReader.ViewModels.RssSyncProfilePartMappingsEditorViewModel

@{
    var mappingViewModel = Model.MappingViewModel;
}

<fieldset>
    @Html.LabelFor(m => m.RssSyncProfilePart.Mappings, T("Mappings"))
    <ol>
        @for (int i = 0; i < mappingViewModel.Count(); i++)
        {
            <li>
                @T("RSS node/node attribute name")
                @Html.TextBox("Mappings[" + i.ToString() + "].RssMapping", mappingViewModel.ElementAt(i).RssMapping)
                @T("Part/field on the content item")
                @Html.DropDownList("Mappings[" + i.ToString() + "].ContentItemStorageMapping", mappingViewModel.ElementAt(i).ContentItemStorageMappingSelectList)
            </li>
        }
    </ol>
    @Html.Hint(T("The selected RSS node/node attribute will be synced to the selected part/field on the content item. You can delete a mapping by leaving empty the corresponding \"Node/node attribute name\" textbox."))
</fieldset>