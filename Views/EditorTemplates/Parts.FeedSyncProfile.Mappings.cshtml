@model Lombiq.FeedAggregator.ViewModels.FeedSyncProfilePartMappingsEditorViewModel

@{
    var mappingViewModel = Model.MappingViewModel;
}

<fieldset>
    @Html.LabelFor(m => m.FeedSyncProfilePart.Mappings, T("Mappings"))
    <ol>
        @for (int i = 0; i < mappingViewModel.Count(); i++)
        {
            <li>
                @T("Feed node/node attribute name")
                @Html.TextBox("Mappings[" + i.ToString() + "].FeedMapping", mappingViewModel.ElementAt(i).FeedMapping)
                @T("Part/field on the content item")
                @Html.DropDownList("Mappings[" + i.ToString() + "].ContentItemStorageMapping", mappingViewModel.ElementAt(i).ContentItemStorageMappingSelectList)
            </li>
        }
    </ol>
    @Html.Hint(T("The selected feed node/node attribute will be synced to the selected part/field on the content item. You can delete a mapping by leaving empty the corresponding \"Node/node attribute name\" textbox."))
</fieldset>